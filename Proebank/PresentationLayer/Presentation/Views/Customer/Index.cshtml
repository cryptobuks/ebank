@model IEnumerable<Domain.Models.Loans.Loan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My loans</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Application.LoanAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.TimeContracted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsClosed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @{
            var itemApplication = item.Application;
            var isClosed = item.IsClosed ? "Yes" : "No";
        }
        <td>
            @Html.DisplayFor(modelItem => itemApplication.LoanAmount)
            @Html.DisplayFor(modelItem => itemApplication.Currency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => itemApplication.TimeContracted)
        </td>
        <td>
            @isClosed
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Payment schedule", "Schedule", new { id=item.Id })
        </td>
    </tr>
}

</table>
