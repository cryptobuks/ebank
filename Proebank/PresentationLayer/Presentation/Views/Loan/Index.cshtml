@model IEnumerable<Domain.Models.Loans.Loan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <title>Loans</title>
    </head>
    <body>
        <div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer.PersonalData.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.LoanAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.Tariff.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.Term)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsClosed)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.PersonalData.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Application.Currency)
                            @Html.DisplayFor(modelItem => item.Application.LoanAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Application.Tariff.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Application.Term)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsClosed)
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" title="Details" class="btn btn-default btn-xs"><i class="fa fa-info fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </table> 
        </div>
    </body>
</html>